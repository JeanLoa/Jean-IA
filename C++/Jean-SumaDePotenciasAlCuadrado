#include <iostream>
#include <cmath>

using namespace std;

int main() {
    int n;
    int potencias = 0;
    cout << "Ingrese el limite" << endl;
    cin >> n;
    while (n % 2 != 0) {
        cout << "Ingrese el limite" << endl;
        cin >> n;
    }
    for (int i = 2; i <= n; i += 2) {
        potencias += pow(i, 2);
    }

    cout << "La suma de las potencias es " << potencias;
    return 0;
}
