#include <iostream>

using namespace std;

int main() {
	int edad;
	bool esMayordeEdad;

	cout << "Por favor, ingresa la edad:" << endl;
	cin >> edad;
	while (edad <= 0) {
		cout << "Una edad por favor:" << endl;
		cin >> edad;
	}

	esMayordeEdad = (edad >= 18);

	if (esMayordeEdad) {
		cout << "Es mayor de edad";
	}
	else {
		cout << "No es mayor de edad";
	}

	return 0;
}
