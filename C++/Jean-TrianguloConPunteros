#include <iostream>

using namespace std;

int main() {
    int num;
    int* pun;
    pun = &num;

    cout << "Ingrese un numero:" << endl;
    cin >> num;

    for (int i = 1; i <= *pun; i++) {
        for (int j = 1; j <= i; j++) {
            cout << "*";
        }
        cout << endl;
    }

    return 0;
}
