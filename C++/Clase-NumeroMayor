#include <iostream>
using namespace std;

// Función para encontrar el mayor de cuatro números
int Hallar_mayor(int a, int b, int c, int d) {
    int mayor = a;
    if (b > mayor) {
        mayor = b;
    }
    if (c > mayor) {
        mayor = c;
    }
    if (d > mayor) {
        mayor = d;
    }
    return mayor;
}

int main() {
    int num1, num2, num3, num4;
    cout << "Ingresa cuatro números:" << endl;
    cout << "Nro 1 = "; cin >> num1;
    cout << "Nro 2 = "; cin >> num2;
    cout << "Nro 3 = "; cin >> num3;
    cout << "Nro 4 = "; cin >> num4;

    int resultado = Hallar_mayor(num1, num2, num3, num4);
    cout << "El mayor de los cuatro números es: " << resultado << endl;

    return 0;
}
